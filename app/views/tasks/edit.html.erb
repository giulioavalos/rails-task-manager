<!-- app/views/tasks/edit.html.erb -->
<div class="container">
  <h1 class="mt-5 mb-4">Edit Task</h1>

<%= form_with(model: @task, url: task_path(@task), method: :patch, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit 'Update Task' %>
  </div>
<% end %>
<%= link_to 'Back to Tasks', tasks_path, class: "btn btn-secondary mt-3" %>
 </div>
